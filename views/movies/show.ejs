										<option value>Member 1</option>
										<option value>Member 2</option>
										<option value>Member 3</option>
									</optgroup>
								</select>
							</p>
							<div>
								<input id="add-crew-button" class="btn btn-primary" type="button" value="Input" name="addcrewbutton">
							</div>
						</fieldset>
					</form>
				</div>
			</div>
		</div>
		<div class="row no-gutters justify-content-center collapse" id="third-textarea-layout">
			<div class="col-1">
				<div class="textContainer"></div>
			</div>
			<div class="col-10">
				<div class="textContainer">
					<h3>Add Custom Info</h3>
					<form action="/movies/<%=movie.id%>/director?_method=PUT" method="POST">
						<label for="genre-textarea">Genres:</label>
						<textarea id="genre-textarea" rows="6" name="newgenre"></textarea><br>
						<input id="post-genre-button" class="btn btn-primary" type="submit" value="Add Genre" name="genreinput">
					</form>
					<br>
					<form action="/movies/<%=movie.id%>?_method=PUT" method="POST">
						<label for="director-textarea">Director:</label>
						<textarea id="director-textarea" rows="6" name="newdirector"></textarea><br>
						<input id="post-director-button" class="btn btn-primary" type="submit" value="Add Director" name="directorinput">
					</form>
				</div>
			</div>
			<div class="col-1">
				<div class="textContainer"></div>
			</div>
