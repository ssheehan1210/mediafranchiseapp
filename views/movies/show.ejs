<body>
	<div class="container-fluid" id="main-page-layout">
		<div class="row no-gutters" id="title-row">
			<div class="col-1">
				
			</div>
			<div class="col-10" id="title-display">
				<div class="textContainer">
					<h1 class="font-weight-bold">Movie Listing Page:<br>
						<%=movie.name%></h1>
				</div>
			</div>
			<div class="col-1">
				
			</div>
		</div>
		<div class="row no-gutters align-items-center" id="main-movie-row">
			<div class="col-1">
				
			</div>
			<div class="col-7 align-self-stretch">
				<div class="textContainer" id="main-movie-info">
					<% if (movie.poster_path === null) { %>
						<h3 class="font-weight-bold" id="no-img-main-title" style="padding: 1em 0; text-decoration: underline;"><%=movie.name%></h3>
						<p id="no-img-main-overview" style="text-align: justify; padding: 0 15px;"><%=movie.overview%></p>
					<% } else { %>
						<img class="img-fluid" src="https://image.tmdb.org/t/p/w500/<%=movie.poster_path%>">
						<h3 class="font-weight-bold" id="main-movie-title"><%=movie.name%></h3>
						<p id="main-movie-overview"><%=movie.overview%></p>
					<% } %>
				</div>
			</div>
			<div class="col-3 align-self-stretch">
				<div class="textContainer" id="side-movie-info">
					<p class="sideMovieHeading">Release Year:</p>
					<p><%=movie.releaseDate%></p>
					<p class="sideMovieHeading">List of Genres:</p>
					<ul>
						<li>Placeholder 1</li>
						<li>Placeholder 2</li>
					</ul>
					<p class="sideMovieHeading">Original Language:</p>
					<p><%=movie.original_language.toUpperCase()%></p>
					<p class="sideMovieHeading">Director:</p>
					<p>
						<%for (let i = 0; i < movie.director.length - 1; i++){%>
							<p><%=movie.director[i]%></p>
						<%}%>
					</p>
					<p class="sideMovieHeading">Characters:</p>
					<p>
						<%for (let i = 0; i < movie.characters.length - 1; i++){%>
							<a href="/<%=movie.id%>/characters<%=i%>"><%=movie.characters[i]%></a>
						<%}%>
						<a href="/<%=movie.id%>/characters<%=movie.characters.length - 1%>"><%=movie.characters[movie.characters.length - 1]%></a>
					</p>
					<a href="/movies/<%=movie.id%>/addchar">Add New Character</a>
					<h4>Rate Movie:</h4>
						<form action="/movies/<%=movie.id%>?_method=PUT" method="POST">
							<select name="rating"><%for (let i = 0; i < 11; i++){%>
									<option value="<%=i%>"><%=i%></option>
								<%}%>
							</select>
							<button type="submit">Submit</button>
						</form>
				</div>
			</div>
			<div class="col-1">
				
			</div>
		</div>
	</div>

	<div>


	</div>

	<div class="container-fluid" id="user-textarea-layout">
		<p>
			<button id="button-one" class="btn btn-primary" type="button" data-toggle="collapse" data-target="#first-textarea-layout" aria-expanded="false" aria-controls="first-textarea-layout">First Section</button>
			<button id="button-two" class="btn btn-primary" type="button" data-toggle="collapse" data-target="#second-textarea-layout" aria-expanded="false" aria-controls="second-textarea-layout">Second Section</button>
			<button id="button-three" class="btn btn-primary" type="button" data-toggle="collapse" data-target="#third-textarea-layout" aria-expanded="false" aria-controls="third-textarea-layout">Third Section</button>
		</p>
		<div class="row no-gutters justify-content-center collapse" id="first-textarea-layout">
			<div class="col-12">
				<div class="textContainer">
					<h3>User Comments</h3>
					<br>
					<table class="table table-striped table-bordered">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Username</th>
								<th scope="col">Comment</th>
							</tr>
						</thead>
						<tbody id="user-comments-list">
							<% for (let i = 0; i < movie.comments.length; i++){ %>
								<tr>
									<th scope="row"><%= i + 1 %></th>
									<td><%= movie.comments[i].username %></td>
									<td><%= movie.comments[i].comment %></td>
								</tr>
							<% } %>
						</tbody>
					</table>
					<br>
					<br>
					<form action="/movies/<%=movie.id%>?_method=PUT" method="POST">
						<textarea id="comment-textarea" rows="6" name="newcomment"></textarea><br>
						<input id="post-comment-button" class="btn btn-primary" type="submit" value="Add Comment" name="usercomment">
					</form>
				</div>
			</div>
		</div>
		<div class="row no-gutters justify-content-center collapse" id="second-textarea-layout">
			<div class="col-10">
				<div class="textContainer">
					<h3>Add Characters/Actors/Crew Members</h3>
					<br>
					<h5>Characters:</h5>
					<form>
						<fieldset>
							<p>
								<label for="character-name-select">Name:</label>
								<select id="character-name-select">
									<option value>Choose...</option>
									<optgroup label="Character in Database">
										<option value>Member 1</option>
										<option value>Member 2</option>
										<option value>Member 3</option>
									</optgroup>
								</select>
							</p>
							<div>
								<input id="add-actor-button" class="btn btn-primary" type="button" value="Input" name="addcharacterbutton">
							</div>
						</fieldset>
					</form>
					<br>
					<br>
					<h5>Actor/Actress:</h5>
					<form>
						<fieldset>
							<p>
								<label for="actor-name-select">Name:</label>
								<select id="actor-name-select">
									<option value>Choose...</option>
									<optgroup label="Actor in Database">
										<option value>Member 1</option>
										<option value>Member 2</option>
										<option value>Member 3</option>
									</optgroup>
								</select>
							</p>
							<div>
								<input id="add-actor-button" class="btn btn-primary" type="button" value="Input" name="addactorbutton">
							</div>
						</fieldset>
					</form>
					<br>
					<br>
					<h5>Production Crew Members:</h5>
					<form>
						<fieldset>
							<p>
								<label for="crew-name-select">Name:</label>
								<select id="crew-name-select">
									<option value>Choose...</option>
